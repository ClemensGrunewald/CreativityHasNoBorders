extends ../layout.pug
include ../modules/mixins_index.pug



//- Stylesheets exclusive for this subpage
block styles
  link(rel='stylesheet', href='/styles/helpers.css')
  link(rel='stylesheet', href='/styles/index_challenges.css')

//- Stylesheets exclusive for this subpage
block scripts

//- Main content to extend the Layout template
block content


  //- CURRENT CHALLENGE
  div.main_wrapper
    div.content_wrapper
    if(new Date(data.challenge.active_until) > new Date())
      h4(class="red_text" style="font-weight:200;") Active Challenge
    else
      h4(class="red_text" style="font-weight:200;") Inactive Challenge
    h2= data.challenge.title
    span.pink_subline

    p=data.challenge.description

    if(data.challenge.shortMode.enabled && new Date(data.challenge.active_until) > new Date())
      p(style="font-weight:bold;") Warning! A Timer starts running once download the brief.

    if(data.user.isAuthenticated)
      a(href="/challenges/"+data.challenge.name+"/download" target="_blank")
        div.button(class="blue_bg download_brief") Download Brief
    else
      a(href="/register")
        div.button(class="blue_bg") Sign up, Start now

    div#project_list(class="list")
      ul.list_wrapper
        each p in data.projects
          a(href="/u/"+p.username+"/"+p.name)
            li
              div.image(style="background-image:url('"+p.thumbnail+"')")
              div.content
                h4 #{p.title}
                p > View Project




  //- HAND IN YOUR CHALLENGE
  div#your_brief(class="diagonal_box" style="background:rgba(159,200,28,1);margin-top:20px;")
    svg(class="diagonal_shape" viewBox="0 0 100 10" preserveAspectRatio="none")
      path(d="M 0,0 L 100,0 100,4 0,10 z" style="fill: white;")
    div.inner_wrapper
      h1 Send us your Brief
      p We are always open to fresh ideas. Even if it comes to ideas for ideas. If you have a challenge that is worth being challenged, just write us an email.
      a(href="mailto:partners@chnb.de")
        div.button(class="blue_bg") PARTNERS@CHNB.DE






  script.
    $(document).ready(function(){

    });

extends ../layout.pug

//- Stylesheets exclusive for this subpage
block styles
  link(rel='stylesheet', href='/styles/helpers.css')
  link(rel='stylesheet', href='/styles/auth_login.css')

//- Stylesheets exclusive for this subpage
block scripts

//- Main content to extend the Layout template
block content

  //- LOGIN HEADER MODULE
  div#header_module
    svg(class="diagonal_shape" viewBox="0 0 100 10" preserveAspectRatio="none")
      path(d="M 0,0 L 100,0 100,4 0,10 z" style="fill: white;")
    img(class="avatar" src="/images/avatars/avatar1.png" alt="avatar")


  //- LOGIN BODY
  div#login_module(class="green_gradient")
    h1 Login

    form(method="POST")
      if(error != null)
        div.error=error
      input(type="text" name="email" placeholder="E-mail" value=(error != null ? data.email : '') required)
      input(type="password" name="password" placeholder="Password" value="" title="Pas" required)
      input(type="submit" name="submit" value="Login")

    a(href="/register") REGISTER
    a(href="/auth/password-reset") FORGOT PASSWORD?

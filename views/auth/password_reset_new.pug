extends ../layout.pug


//- Stylesheets exclusive for this subpage
block styles
  link(rel='stylesheet', href='/styles/helpers.css')
  link(rel='stylesheet', href='/styles/auth_login.css')

//- Stylesheets exclusive for this subpage
block scripts

//- Main content to extend the Layout template
block content

  //- LOGIN HEADER MODULE
  div#header_module
    svg(class="diagonal_shape" viewBox="0 0 100 10" preserveAspectRatio="none")
      path(d="M 0,0 L 100,0 100,4 0,10 z" style="fill: white;")
    - var rnd = Math.floor((Math.random()*7)+1)
    div(class="avatar" style="background-image:url('/images/avatars/avatar"+rnd+".png')")


  //- SET NEW PASSWORT PASSWORD BODY
  div#login_module(class="green_gradient")
    h1 SET NEW PASSWORD?
    p Okay, almost done. Set your new Password and you can access your profile again.

    form(method="POST")
      if(error != null)
        div.error=error
      input(type="password" name="password" placeholder="password" value="" pattern=".{8,}" title="At least 8 characters long" required)
      input(type="password" name="confirm_password" placeholder="confirm password" value="" pattern=".{8,}" title="At least 8 characters long" required)
      input(type="submit" name="submit" value="Save")

    a(href="/login") BACK TO LOGIN

extends ../layout.pug

//- Stylesheets exclusive for this subpage
block styles
  link(rel='stylesheet', href='/styles/helpers.css')
  link(rel='stylesheet', href='/styles/auth_login.css')

//- Stylesheets exclusive for this subpage
block scripts

//- Main content to extend the Layout template
block content

  //- LOGIN HEADER MODULE
  div#header_module
    svg(class="diagonal_shape" viewBox="0 0 100 10" preserveAspectRatio="none")
      path(d="M 0,0 L 100,0 100,4 0,10 z" style="fill: white;")
    img(class="avatar" src="/images/avatars/avatar1.png" alt="avatar")


  //- RESET BODY
  div#login_module(class="green_gradient")
    h1 Reset your Password now.
    p We have send an email to #{data.email}. Please use the link to set up a new password. Afterwards you can log yourself in and use our platform.
